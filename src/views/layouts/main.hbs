<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electronic Circuit</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&family=Oleo+Script&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    {{> navigation }}

    <style>
        body {
            background-color: #141414;
            color: aliceblue;
        }
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        .message.other-message {
            display: flex;
            align-items: center;
            padding: 10px; 
        }

        .message.other-message .message-content {
            flex-grow: 1; 
            background-color: #141414;
        }

        .message.other-message .other {
            font-weight: bold;
        }

        .message.other-message .text {
            border-radius: 5px;
            padding: 5px;
        }

        .message.other-message .text pre {
            background-color: inherit;
            border: none; 
            padding: 0;
            white-space: pre-wrap;
        }

        .message.other-message .text em {
            font-style: italic;
        }

    </style>
