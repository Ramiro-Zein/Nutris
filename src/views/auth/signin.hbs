<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center bg-dark text-white">
        <div class="card-header">
          <h3>Iniciar Sesión</h3>
        </div>
        <div class="card-body">
          <form action="/signin" method="POST">
            <div class="form-group">
              <input type="email" name="username" placeholder="Correo" class="form-control custom-border bg-dark text-white">
            </div><br>
            <div class="form-group">
              <input type="password" name="password" placeholder="Contraseña" class="form-control custom-border bg-dark text-white">
            </div><br>
            <div class="form-group">
              <button class="btn btn-info text-white btn-block">
                Iniciar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>