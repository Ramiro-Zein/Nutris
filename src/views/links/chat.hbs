<html>
  <head>
    <link rel="stylesheet" href="css/style.css">
    <script>
      function onClickButton() {
        var loadingElement = document.getElementById('loading');
        loadingElement.classList.remove('d-none');
        setTimeout(function () {
          loadingElement.classList.add('d-none');
        }, 100000);
      }
    </script>
  </head>

  <body>
    <form class="needs-validation" novalidate action="" method="POST" id="myform">
      <div class="container chat-container">
        <div class="chat-box">
        <div class="chat-header">Circuits</div>
          <div class="chat-body m-2">
            
              <div class="message">
                <div class="message other-message"></div>
                <img class="other-image" src="css/img/Profile/profile_2.png" alt="Imagen de Perfil del Amigo">
                  <div class="message-content">
                    <div class="other">Chat</div>
                    <div class="text text-justify">
                      <div class="message other-message">
                        <div class="text text-justify">
                          <pre class="text text-white text-justify">Hola {{fullname}}, ¿En qué puedo ayudarte hoy?</pre>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>

              <div class="message">
                <div class="message other-message">
                  <img class="other-image" src="css/img/Profile/profile_1.png" alt="Imagen de Perfil del Usuario">
                  <div class="message-content">
                    <div class="user">Tú</div>
                    <div class="text text-justify">{{data.mensajes}}</div>
                  </div>
                </div>
              </div>
              <div class="message">
                <div class="message other-message">
                  <img class="other-image" src="css/img/Profile/profile_2.png" alt="Imagen de Perfil del Amigo">
                  <div class="message-content">
                    <div class="other">Chat</div>
                    <div class="text text-justify">
                      <div class="message other-message">
                        <div class="text text-justify">
                          <pre class="text text-white text-justify"><em>{{data.respuestas}}</em></pre>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div id="loading" class="d-none">
                  <div class="d-flex justify-content-center p-1">
                    <div class="spinner-grow text-info" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                  </div>
                  <center>
                    <p>Generando respuesta...
                  </center>
                </div>
              </div>
              <div class="chat-footer">
                <textarea class="message-input" placeholder="Escribe tu mensaje..." name="prompt" maxlength="500"></textarea>
                <button class="btn btn-info" type="submit" onclick="onClickButton()">Enviar</button>
              </div>

              </div>
            </div>
        </div>
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
